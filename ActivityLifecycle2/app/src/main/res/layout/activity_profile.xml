<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imgTonyStark"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_margin="20dp"
        android:src="@drawable/tony_stark_new"></ImageView>

<TextView
    android:id="@+id/txtName"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textSize="18sp"
    android:textStyle="bold"
   android:layout_marginTop="20dp"
    android:textColor="#000000"
    android:text="Tony Stark"
    android:layout_toRightOf="@id/imgTonyStark"
    ></TextView>

    <TextView
        android:id="@+id/txtEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
android:text="tonystark@starkindustry.com"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/txtName"
        android:layout_toRightOf="@id/imgTonyStark"
        android:textColor="#000000"
        ></TextView>

    <TextView
        android:id="@+id/txtPhoneNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:text="+91 8005675346"
        android:layout_toRightOf="@id/imgTonyStark"
        android:layout_below="@id/txtEmail"
        android:layout_marginTop="15dp"
        android:textColor="#000000"
        ></TextView>

    <Button
        android:id="@+id/btnMoreInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="More Information"
        android:background="#0000ff"
        android:textColor="#ffffff"
        android:textSize="18sp"
        android:layout_margin="20dp"
        android:layout_below="@id/imgTonyStark"
        ></Button>
    <Button
        android:id="@+id/btnExit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Exit"
        android:layout_alignParentBottom="true"
        android:layout_margin="20dp"
        android:background="#ff1744"
        android:textSize="18sp"
        android:textColor="#ffffff"
        ></Button>
</RelativeLayout>